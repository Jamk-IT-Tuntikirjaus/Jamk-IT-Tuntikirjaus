echo Find document script
curl -s \
http://0.0.0.0:9000/plugin/esatime.document.find \
-X POST -d '{"collection":"User", "id": "a9256af2-7dc8-4fa9-9a7b-620c03040e5f"}' \
-H "Content-Type: application/json" \
-H X-BB-SESSION:$bb_id | jq -r ".result, .message, .data"

