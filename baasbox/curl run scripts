#To run this file, please install jq first with 'sudo apt install jq'

echo Default login
echo - save id from it  to alias named file
echo - read id from alias file
curl -s http://0.0.0.0:9000/login \
-d "username=user3" \
-d "password=123" \
-d "appcode=1234567890" | sed 's/X-BB-SESSION/SESSION/g' | jq -r ".data.SESSION" > alias
#Login | Change wrong format to correct one | parse data and save sessionid to alias file
echo "Session id saved in alias $(cat alias)"
#Creating id alias
bb_id="$(cat alias)"
rm alias
echo
echo Testaa esatime.register scriptia...
curl -s -X POST -d '{ "username": "user4", "password": "pass"}' \
http://0.0.0.0:9000/plugin/esatime.register \
-H "Content-Type: application/json" \
-H X-BB-SESSION:$(echo $bb_id) | jq -r ".result, .message, .data"
echo
echo Testaa esatime.login scriptia...
curl -s -X POST --data "username=user4&password=pass" \
http://0.0.0.0:9000/plugin/esatime.login \
-H X-BB-SESSION:$(echo $bb_id) | jq -r ".result, .message, .data"
echo
